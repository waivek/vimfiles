{
    "python.linting.enabled": true,
    "pyright.disableDiagnostics": false,
    "python.analysis.autoImportCompletions": true,

    "python.analysis.indexing": true,

    // "python.analysis.diagnosticMode": "openFilesOnly",
    "python.analysis.diagnosticMode": "openFilesOnly",

    "diagnostic.virtualText": true,
    "diagnostic.virtualTextCurrentLineOnly": false, // we want inline errors on all lines, not just the current line
    "inlayHint.refreshOnInsertMode": false, // we don’t want to lint when we finish INSERT MODE, we only want to line when we save

    "suggest.virtualText": true,
    "suggest.autoTrigger": "always",
    "suggest.noselect": true,
    "suggest.localityBonus": true,
    "suggest.defaultSortMethod": "none",

    "inlayHint.enable": false,

    "vimlsp.diagnostic.enable": true,

    // "volar.enable": true,
    "javascript.validate.enable": true,
    "typescript.validate.enable": true, 
    "tsserver.enable": true,
    "css.lint.unknownAtRules": "ignore",



    "diagnostic.showUnused": true,
    "diagnostic.level": "information",


    "outline.expandLevel": 0,
    "outline.sortBy": "position",

    "suggest.lowPrioritySourceLimit": 3,
    "coc.source.file.priority": 90, // we don’t want file suggestions to be considered low priority

    "tailwindCSS.enable": true,

    "coc.preferences.useQuickfixForLocations": true

}
