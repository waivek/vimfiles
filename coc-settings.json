{
    "python.linting.enabled": true,
    "pyright.disableDiagnostics": false,
    "python.analysis.autoImportCompletions": true,

    "diagnostic.virtualText": true,
    "diagnostic.virtualTextCurrentLineOnly": false, // we want inline errors on all lines, not just the current line
    "inlayHint.refreshOnInsertMode": false, // we donâ€™t want to lint when we finish INSERT MODE, we only want to line when we save

    "suggest.virtualText": true,
    "suggest.autoTrigger": "always",
    "suggest.noselect": true,
    "suggest.localityBonus": true,
    "inlayHint.enable": false,

    "vimlsp.diagnostic.enable": true,

    "volar.enable": true,
    "volar.takeOverMode.enabled": true,
    "tsserver.enable": false,
    "css.lint.unknownAtRules": "ignore",


    "javascript.validate.enable": false, // re-enable once await googleapi.videos.list({}); stops showing errors
    "diagnostic.showUnused": false,
    "diagnostic.level": "information",



    "tailwindCSS.enable": true,

    "languageserver": {
        "sql": {
            "module": "/usr/lib/node_modules/sql-language-server/dist/bin/cli.js",
            "args": ["up", "--method", "node-ipc"],
            "filetypes": ["sql", "mysql"],
            "settings": {
                "sql-language-server": {
                    "connections": [
                        {
                            "name": "sqlite3-project",
                            "adapter": "sqlite3",
                            "filename": "/home/vivek/Twitch/coffee-vps/code/data/clips.db",
                            "projectPaths": ["/home/vivek/Twitch/coffee-vps/code"]
                        }
                    ]
                }
            }
        }
    }


}
